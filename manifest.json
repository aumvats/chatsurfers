{
    "manifest_version": 3,
    "name": "Chatsurfers",
    "version": "1.0",
    "description": "Some entertainment while you wait for o1 to respond",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://chatgpt.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "video/videoplayback.mp4"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
